
<% if @topic.errors.any? %>
	<ul>
	<% @topic.errors.full_messages.each do |e| %>
		<li><%= e %></li>
	<% end %>
	</ul>
<% end %>

<div class="form-group">
	<%= f.label :name,"文章標題"%>
	<%= f.text_field :name,:class => "form-control"%>
</div>

<div class="form-group">
	<%= f.label :category_ids,"標籤"%>
	<div></div>
	<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
</div>

<div class="form-group">
	<%= f.file_field :avatar %>
	<% if @topic.avatar.exists? %>
	  <%= check_box_tag "_remove_image","1"%>刪除圖片
	<%end%>
</div>

<div class="form-group">
	<%= f.label :content,"內文"%>
	<%= f.text_area :content,:class => "form-control"%>
</div>

<div class="form-group">
	<%= f.label :status,"文章標題"%>
	<%= f.select :status,[["發布","published"], ["存為草稿", "draft"]],:class => "form-control"%>
</div>

<%= f.submit "送出",:class => "btn btn-primary" %>
<%= link_to "回到目錄",topics_path(:page => params[:page])%>

